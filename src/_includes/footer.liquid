<footer class="mt-8 bg-black dark:bg-white py-8 flex-shrink-0">
  <div class="max-w-screen-sm md:max-w-screen-md mx-auto px-8">
    <p class="text-sm py-2 text-right text-white dark:text-black">
      {% if site.github != "" %}
        <a href={{ site.github }}>Github</a> 
      {% endif %}

      {% if site.linkedin != "" %}
        &middot; <a href={{ site.linkedin }}>LinkedIn</a>
      {% endif %}

      {% if site.twitter != "" %}
        &middot; <a href={{ site.twitter }}>Twitter</a>
      {% endif %}
    </p>
  </div>
</footer>
